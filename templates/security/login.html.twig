{% extends "base.html.twig"%}

{% block title %}
    Login | Zing
{% endblock %}
{% block body %}
    <div id="login" class="columns is-centered">
        <div class="column is-one-fifth is-paddingless">
            <img src="/img/logo.svg" alt="logo" class="logo-img">
        </div>
    </div>
    <div id="login" class="columns is-centered is-halfheight">
        <div class="column is-one-fifth is-paddingless login-card">
            <div class="card-title">
                <h1>Login</h1>
            </div>
            <div class="content">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

