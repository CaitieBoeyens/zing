{% extends "base.html.twig"%}

{% block title %}
    Login | Zing
{% endblock %}
{% block body %}
    <div class="login-con">
        {# <div id="login" class="columns is-centered"></div> #}
        <div id="login" class="columns is-halfheight">
            <div class="column is-offset-2 is-one-quarter is-paddingless login-card signup-card">
                <div class="card-title">
                    <h1>Login</h1>
                </div>
                <div class="content">
                    <form method="post">
                        {% if error %}
                            <div class="notification is-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
                        <label for="inputUsername">Username</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required="required" autofocus="autofocus">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required="required">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="button is-blue is-rounded is-inverted" type="submit">
                            Sign in
                        </button>

                        {# <h5 class="errors"> {{ errors }} </h5> #}

                    </form>
                </div>
            </div>
            <div class="column is-half is-paddingless signup-card">
                <img src="/img/logo.svg" alt="logo" class="logo-img ">
            </div>
        </div>
    {% endblock %}

