{% extends "base.html.twig"%}

{% block title %}
    Login | Zing
{% endblock %}
{% block body %}
    <div id="login" class="columns is-centered">
        <div class="column is-one-fifth is-paddingless">
            <img src="/img/logo.svg" alt="logo" class="logo-img">
        </div>
    </div>
    <div id="login" class="columns is-centered is-halfheight">
        <div class="column is-one-fifth is-paddingless login-card">
            <div class="card-title">
                <h1>Login</h1>
            </div>
            <div class="content">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    <label for="inputEmail">Username</label>
                    <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required="required" autofocus="autofocus">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required="required">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

