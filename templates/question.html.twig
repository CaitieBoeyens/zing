{% extends "base.html.twig"%}

{% block title %}
    {{question.title}}
{% endblock %}

{% block body %}
    {% include 'components/navbar.html.twig'%}

    <div class="container main">
        <div class="columns is-centered">
            <div class="column is-three-quarters">
                <div class="box ">
                    <div class="box is-clearfix">
                        <article class="media">
                            <figure class="media-left">
                                <p class="image is-64x64">
                                    <img src="https://bulma.io/images/placeholders/128x128.png">
                                </p>
                            </figure>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <small>{{question.user.username}}</small>
                                        <br>
                                        <strong>{{question.title}}</strong>
                                        <br>
                                        {{question.body}}
                                    </p>
                                </div>
                                <hr class="navbar-divider">
                                <nav class="level is-mobile">
                                    <div class="level-left"></div>
                                    <div class="level-right">
                                        <a class="level-item">
                                            <span class="icon is-small is-inactive zing">
                                                <i class="fas fa-bolt"></i>
                                            </span>
                                        </a>
                                        <a class="level-item">
                                            <span class='tag is-yellow is-outline status is-uppercase'>3 Answers</span>
                                        </a>
                                        <a class="level-item">
                                            <span class="icon is-small is-blue">
                                                <i class="fas fa-reply"></i>
                                            </span>
                                        </a>

                                    </div>
                                </nav>

                            </div>
                        </article>
                        {% for reply in question.replys %}

                            <article class="media reply column is-11 is-pulled-right">
                                <div class="media-content">
                                    <div class="content">
                                        <p>
                                            <strong>{{reply.user.username}}</strong>

                                            <br>
                                            {{reply.body}}
                                        </p>
                                    </div>
                                    <nav class="level is-mobile">
                                        <div class="level-left"></div>
                                    </nav>
                                </div>
                            </article>
                        {% endfor %}
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.body)}}
                        <h3>Tags</h3>
                        <ul class="tags" data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}">
                            {% for tag in form.tags %}
                                <li>{{ form_row(tag.name) }}</li>
                            {% endfor %}
                        </ul>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}