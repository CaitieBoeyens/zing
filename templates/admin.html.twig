{% extends "base.html.twig"%}

{% block title %}
    Admin | zing.
{% endblock %}

{% block body %}

    {% include 'components/navbar.html.twig' %}

    <div class="notification is-primary add-admin-success" id="hide-notification">
        New Administrator added <strong>successfully</strong>.
    </div>
    <div class="notification is-primary remove-admin-success" id="hide-notification">
        Administrator removed <strong>successfully</strong>.
    </div>
    <div class="notification is-danger ban-member-success" id="hide-notification">
        Member banned <strong>successfully</strong>.
    </div>
    <div class="notification is-warning restore-member-success" id="hide-notification">
        Member restored <strong>successfully</strong>.
    </div>

    <section class="section">
        <div class="container">
            <h1 class="title is-1">Admin Dashboard</h1>
            <div class="columns">
                <div class="column is-one-quarter">
                    <div class="box">
                        <aside class="menu">
                            <p class="menu-label">
                                General
                            </p>
                            <ul class="menu-list">
                                <li>
                                    <a class="is-active dashboard-list">Dashboard</a>
                                </li>
                            </ul>
                            <p class="menu-label">
                                Administrators
                            </p>
                            <ul class="menu-list">
                                <li>
                                    <a class="add-list">Add</a>
                                </li>
                                <li>
                                    <a class="remove-list">Remove</a>
                                </li>
                            </ul>
                            <p class="menu-label">
                                Members
                            </p>
                            <ul class="menu-list">
                                <li>
                                    <a class="members-list">Members</a>
                                </li>
                                <li>
                                    <a class="banned-members-list">Banned Member</a>
                                </li>
                            </ul>
                        </aside>
                    </div>
                </div>
                <div class="column">
                    <div class="box dashboard">
                        {% include 'components/admin/dashboard.html.twig' %}
                    </div>
                    <div class="box add">
                        {% include 'components/admin/add.html.twig' %}
                    </div>
                    <div class="box remove">
                        {% include 'components/admin/remove.html.twig' %}
                    </div>
                    <div class="box members">
                        {% include 'components/admin/members.html.twig' %}
                    </div>
                    <div class="box banned-members">
                        {% include 'components/admin/banned_members.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="{{asset('build/js/admin.js')}}"></script>
{% endblock %}