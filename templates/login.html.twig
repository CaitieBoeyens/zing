{% extends "base.html.twig"%}

{% block title %}

    Login | Zing
{% endblock %}

{% block body %}

    <nav class="navbar is-light is-fixed-bottom" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="">
                <img src="img/logo.png" width="45">
            </a>
        </div>
    </nav>

    <div id="login" class="is-halfheight">
        <div class="login-card">

            <div class="card-title">
                <h1>Please Sign In</h1>
            </div>

            <div class="content">
                <form method="POST" action="#">

                    <input id="email" type="email" name="email" title="email" placeholder="Email" required="required" autofocus="autofocus">
                    <input id="password" type="password" name="password" title="password" placeholder="Password" required="required">

                    <div class="level options">
                        <div class="level-right">
                            <a class="btn btn-link" href="{{ path('signup_view') }}">Sign Up Here</a>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>

{% endblock %}