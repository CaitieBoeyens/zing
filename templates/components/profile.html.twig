<div class="columns">
    <div class="column is-half">

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">Username</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control">
                        <input class="input is-rounded" type="text" value={{ app.user.username }} disabled="disabled">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">Email</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control">
                        <input class="input is-rounded" type="text" value={{ app.user.email }} disabled="disabled">
                    </p>
                </div>
            </div>
        </div>

        <div class="field is-horizontal new-password">
            <div class="field-label is-normal">
                <label class="label">Password</label>
            </div>
            <div class="field-body">
                <div class="field">
                    <p class="control">
                        Click <a href="#" class='new-password-link'>here </a> if you wish to update your password.
                    </p>
                </div>
            </div>
        </div>

        <div class="change-password">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control">
                            <input class="input" type="password" placeholder="Current Password">
                        </p>
                    </div>
                </div>
            </div>
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control">
                            <input class="input new-password-input" type="password" placeholder="New Password">
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="field-label">
                <!-- Left empty for spacing -->
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                        <button class="button is-danger cancel-update">
                            Cancel
                        </button>
                        <button class="button is-primary">
                            Update
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>