{% extends "base.html.twig"%}

{% block title %}

    Register | Zing
{% endblock %}

{% block body %}

    <div class="columns is-halfheight ">
        <div class="column is-half is-offset-1 is-paddingless signup-card">
            <img src="/img/logo.svg" alt="logo" class="logo-img ">
        </div>
        <div class="column is-one-quarter is-paddingless login-card signup-card">

            <div class="card-title">
                <h1>Register</h1>
            </div>

            <div class="content">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}